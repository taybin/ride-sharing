<h1>New post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :text, "Message" %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
